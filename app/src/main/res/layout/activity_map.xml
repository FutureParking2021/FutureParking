<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MapActivity"
    android:orientation="vertical"
    >


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1">

          <fragment
              android:id="@+id/map_MAP_google_map"
              android:name="com.google.android.gms.maps.MapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:background="@android:color/white"
              >
               <EditText
                   android:id="@+id/map_EDT_place_autocomplete"
                   android:tag="search"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   />
               ></LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="25dp"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_height="wrap_content">

               <RelativeLayout
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:src="@drawable/distance" />
                    <TextView
                        android:id="@+id/map_LBL_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="casual"
                        android:text="0 km"
                        />
                    ></RelativeLayout>

               <RelativeLayout
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:src="@drawable/time" />
                    <TextView
                        android:id="@+id/map_LBL_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="casual"
                        android:text="0 mins"
                        />
                    ></RelativeLayout>


               ></LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_alignParentLeft="true"
              android:layout_centerInParent="true"

              >
               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/map_BTN_start"
                   android:tag="start"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                   android:src="@drawable/manbike" />

               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/map_BTN_stop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                   android:src="@drawable/stop1"
                   android:tag="stop" />

               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/map_BTN_pause"
                   android:tag="pause"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                   android:src="@drawable/pausepic"
                   />
               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/map_BTN_start_timer"
                   android:tag="pause"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                   android:src="@drawable/playtimer"
                   />

               ></LinearLayout>

          <ImageView
              android:id="@+id/map_IMG_zoomIn"
              android:layout_width="26dp"
              android:layout_height="26dp"
              android:layout_alignParentRight="true"
              android:layout_centerInParent="true"
              android:layout_marginBottom="10dp"
              android:layout_marginRight="20dp"
              android:tag="zoom_in"
              ></ImageView>
          <ImageView
              android:id="@+id/map_IMG_zoomOut"
              android:layout_width="26dp"
              android:layout_height="26dp"
              android:layout_below="@+id/map_IMG_zoomIn"
              android:layout_alignParentRight="true"
              android:layout_marginRight="20dp"
              android:layout_marginBottom="40dp"
              android:tag="zoom_out"
              ></ImageView>

          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:id="@+id/map_BTN_directions"
              android:tag="direction"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_marginStart="15dp"
              android:layout_marginTop="15dp"
              android:layout_marginEnd="15dp"
              android:layout_marginRight="17dp"
              android:layout_marginBottom="12dp"
              android:backgroundTint="#1681DF"
              android:src="@drawable/ic_directions"
              />

          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:id="@+id/map_BTN_state_elite"
              android:tag="elite"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_marginRight="17dp"
              android:layout_marginBottom="89dp"
              android:backgroundTint="@color/places_autocomplete_fullscreen_background"
              android:src="@drawable/ic_satellite_on" />

          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:id="@+id/map_BTN_gps"
              android:tag="gps"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_marginRight="17dp"
              android:layout_marginBottom="167dp"
              android:backgroundTint="@color/places_autocomplete_fullscreen_background"
              android:src="@drawable/ic_my_gps" />

          ></RelativeLayout>
</LinearLayout>