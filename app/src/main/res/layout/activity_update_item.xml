<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateItemActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/UpdateItem_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Park"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />

        />
    <EditText
        android:id="@+id/UpdateItem_EDT_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parking name"
        android:layout_marginTop="45dp"
        android:layout_below="@id/UpdateItem_LBL_title"
        android:tag="name"
        />
    <EditText
        android:id="@+id/UpdateItem_EDT_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parking Activation"
        android:layout_marginTop="25dp"
        android:layout_below="@id/UpdateItem_EDT_name"
        android:tag="active"

        />
    <EditText
        android:id="@+id/UpdateItem_EDT_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parking Price"
        android:layout_marginTop="25dp"
        android:layout_below="@id/UpdateItem_EDT_active"
        android:tag="price"
        />
    <EditText
        android:id="@+id/UpdateItem_EDT_parkNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of park lots"
        android:layout_marginTop="25dp"
        android:layout_below="@id/UpdateItem_EDT_Price"
        android:tag="location"
        />

    <Button
        android:id="@+id/UpdateItem_BTN_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Park"
        android:layout_below="@id/UpdateItem_EDT_parkNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:tag="add"
        />
    <TextView
        android:id="@+id/UpdateItem_LBL_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text=""

        />
    <TextView
        android:id="@+id/UpdateItem_LBL_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text=""

        />
    <TextView
        android:id="@+id/UpdateItem_LBL_park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text=""
        />

</RelativeLayout>